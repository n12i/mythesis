%-----<vcaption.sty>-----
\input frbox.sty
\def\vcaption{\refstepcounter\@captype \@dblarg{\@vcaption\@captype}}

\long\def\@vcaption#1[#2]#3{\addcontentsline{\csname
    ext@#1\endcsname}{#1}{\protect\numberline{\csname 
      the#1\endcsname}{\ignorespaces #2}}\begingroup
  \@parboxrestore
  \@makevcaption{\csname fnum@#1\endcsname}{\ignorespaces #3}\par
  \endgroup}

\long\def\@makevcaption#1#2{
  $\vcenter{\leavevmode\frbox[-]{#1 \ #2}}$
  }
%-----<vcaption.sty>-----
